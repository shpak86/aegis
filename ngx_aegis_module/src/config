ngx_addon_name=ngx_aegis_module

if test -n "$ngx_module_link"; then
    # динамический модуль 
    ngx_module_type=HTTP
    ngx_module_name=ngx_aegis_module
    ngx_module_srcs="$ngx_addon_dir/ngx_aegis_module.c"
    . auto/module
else
    # статический модуль
    HTTP_MODULES="$HTTP_MODULES ngx_aegis_module"
    NGX_ADDON_SRCS="$NGX_ADDON_SRCS $ngx_addon_dir/ngx_aegis_module.c"
fi

# БЕЗ jansson зависимостей!